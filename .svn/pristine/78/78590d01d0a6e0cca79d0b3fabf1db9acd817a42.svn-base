<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/menu_bookmark"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_bookmark"
            android:text="@string/menu_bookmark" />

        <TextView
            android:id="@+id/menu_read"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_read"
            android:text="@string/menu_read" />

        <TextView
            android:id="@+id/menu_history"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_history"
            android:text="@string/menu_history" />

        <TextView
            android:id="@+id/menu_setting"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_setting"
            android:text="@string/menu_setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" >

        <TextView
            android:id="@+id/menu_share"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_share"
            android:text="@string/menu_share" />

        <TextView
            android:id="@+id/menu_in_fullscreen"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_in_fullscreen"
            android:text="@string/menu_in_fullscreen" />

        <TextView
            android:id="@+id/menu_download"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_download"
            android:text="@string/menu_download" />

        <TextView
            android:id="@+id/menu_exit"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_exit"
            android:text="@string/menu_exit" />
    </LinearLayout>

</LinearLayout>