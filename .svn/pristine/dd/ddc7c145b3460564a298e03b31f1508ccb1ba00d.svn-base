<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/menu_find"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_find"
            android:text="@string/menu_find" />

        <TextView
            android:id="@+id/menu_save"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_save"
            android:text="@string/menu_save" />

        <TextView
            android:id="@+id/menu_pageinfo"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_pageinfo"
            android:text="@string/menu_pageinfo" />

        <TextView
            android:id="@+id/menu_help"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_about"
            android:text="@string/menu_about" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp" >
    </LinearLayout>

</LinearLayout>