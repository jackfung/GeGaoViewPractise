<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/titleDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/title_divider" />

<ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="13dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/name"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="20dp" android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/title"
            android:layout_width="250dip"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:inputType="textCapSentences"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceMedium" android:background="@drawable/edittext_bg" android:textColor="@color/cygnus_normal" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/location"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="15dp" android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="250dip"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:hint="@string/http"
            android:inputType="textUri"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceMedium" android:background="@drawable/edittext_bg" android:textColor="@color/cygnus_normal" android:paddingBottom="5dp" android:paddingLeft="15dp" android:paddingTop="5dp"/>
    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="vertical" android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#484848"
            android:gravity="fill_horizontal"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_selector"
                android:text="@android:string/cancel"
                android:textColor="#ffffff"
                android:textSize="20dp" />
               <View
                android:id="@+id/button_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#484848" />
               <Button
                android:id="@+id/OK"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_selector"
                android:text="@android:string/ok"
                android:textColor="#ffffff"
                android:textSize="20dp" />

         
        </LinearLayout>
    </LinearLayout>

</LinearLayout>