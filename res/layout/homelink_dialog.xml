<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="36dp"
            android:layout_height="fill_parent"
            android:text="@string/homelink_url" android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/homelink_url_input"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:inputType="textCapSentences"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:textColorPrimary" android:layout_marginRight="10dp">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="36dp"
            android:layout_height="fill_parent"
            android:text="@string/homelink_title" android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/homelink_title_input"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_vertical"
            android:inputType="textCapSentences"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:textColorPrimary" android:layout_marginRight="10dp">
        </EditText>
    </LinearLayout>

</LinearLayout>